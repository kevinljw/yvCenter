  each val,index in allMentors
    .modal.fade(tabindex='-1', role='dialog', aria-labelledby='mentorLabel', aria-hidden='true', id='mentorModel_#{index}')
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
            h4#mentorLabel.modal-title #{val.name}
          .modal-body(style='height: 330px;')
            .col-sm-5
              .img-circle.img-no-padding.profile_pic_inModel(style='background-image: url("/uploads/'+val.picture+'");')
              h5.text-center #{val.name}
                br
                small #{val.job}
            .col-sm-offset-1.col-sm-5
              h5.text-center 簡述
              //- h6 !{"<li>"+val.abstract.split(',')+"</li>"}
              each eachAbs in val.abstract.split(',')
                li=eachAbs
              
          .modal-footer
            .left-side
              a.btn.btn-success.btn-simple(href='#{val.link}', target='_blank')
                | 前往連結
            .divider
            .right-side
              button.btn.btn-danger.btn-simple(type='button', data-dismiss='modal') 關閉
