extends layoutClear

block content
  .wrapper
    .register-background
      .filter-black
      .container
        .row
          .col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3.col-xs-10.col-xs-offset-1
            .register-card
              h3.title 管理員 歡迎您
              form.register-form(action='/loginAdmin', method='POST')
                input(type='hidden', name='_csrf', value=_csrf)
                .form-group
                  label(for='email') Email
                  input.form-control(type='email', name='email', id='email', placeholder='Email', autofocus=true)
                  label(for='password') 密碼
                  input.form-control(type='password', name='password', id='password', placeholder='Password')
                  button.btn.btn-danger.btn-block(type='submit') 登入
                .forgot
                  a.btn.btn-simple.btn-danger(data-toggle="modal" data-target="#forgetModel") 忘記密碼？
      .footer.register-footer.text-center
        h6
