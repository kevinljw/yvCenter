//- top navigation
.top_nav
  .nav_menu
    nav(role='navigation')
      .nav.toggle
        a#menu_toggle
          i.fa.fa-bars
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=title=='Create Account'?'active':undefined)
            a(href='/signup') Create Account
          li(class=title=='Login'?'active':undefined)
            a(href='/login') Login
        else
          li
            a.user-profile.dropdown-toggle(href='javascript:;', data-toggle='dropdown', aria-expanded='false')
              if user.profile.picture
                img(src='#{user.profile.picture}', alt='...')
              else
                img(src='#{user.gravatar(60)}', alt='...')
              | #{user.profile.name || user.email || user.id}&nbsp;
              span.fa.fa-angle-down
            ul.dropdown-menu.dropdown-usermenu.animated.fadeInDown.pull-right
              li
                a(href='/account')   My Account
              li
                a(href='javascript:;')
                  span.badge.bg-red.pull-right 50%
                  span Settings
              li
                a(href='javascript:;') Help
              li
                a(href='/logout')
                  i.fa.fa-sign-out.pull-right
                  |  Log Out
