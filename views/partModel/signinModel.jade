#signupModel.modal.fade(tabindex='-1', role='dialog', aria-labelledby='signupLabel', aria-hidden='true')
  .modal-dialog
    .modal-content
      .modal-header
        button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
        h4#signupLabel.modal-title 註冊
      form.form-horizontal(action='/signup', id='signup-form', method='POST')
          input(type='hidden', name='_csrf', value=_csrf)
          .modal-body
            .form-group
              label.col-sm-4.control-label(for='email') Email
              .col-sm-6
                input.form-control(type='email', name='email', id='email', placeholder='Email', autofocus)
            .form-group
              label.col-sm-4.control-label(for='name') 姓名
              .col-sm-6
                input.form-control(type='name', name='name', id='name', placeholder='Name', autofocus)
            .form-group
              label.col-sm-4.control-label(for='password') 密碼
              .col-sm-6
                input.form-control(type='password', name='password', id='password', placeholder='Password')
            .form-group
              label.col-sm-4.control-label(for='confirmPassword') 確認密碼
              .col-sm-6
                input.form-control(type='password', name='confirmPassword', id='confirmPassword', placeholder='Confirm Password')
          .modal-footer.form-group
            .left-side
              button.btn.btn-danger.btn-simple(type='button', data-dismiss='modal') 取消
            .divider
            .right-side
              button.btn.btn-success.btn-simple(type='submit')
                i.fa.fa-user-plus
                | 註冊