extends layout

block content
  
  .wrapper
    .landing-header.section-nude
      .container
        .motto.col-sm-6
          h2.title-uppercase 在地好資源
          h5 游標移至行政區以查閱
          br
          if hasChosen
            if allResources.length>0
              .section.section-gray.col-sm-11(style='max-height:500px;overflow: scroll;')
                table.table.table-striped.projects
                  thead
                    tr
                      th(style='width: 2%') #
                      th(style='width: 25%') 單位
                      th(style='width: 37%') 簡述
                      th(style='width: 18%') 聯絡電話
                      th(style='width: 18%') 網站
                  tbody
                    each val,index in allResources
                      tr
                        td
                          h6
                            small #{index}
                        td #{val.org}
                        td #{val.abstract}
                        td 
                          h6
                            small #{val.phone}
                        td
                          a.btn.btn.btn-danger.btn-xs(href='#{val.link}', target='_blank', style='font-weight:900;')
                            i.fa.fa-mobile
                            |  瀏覽
            else
              h3 這個地區暫時沒有資料

              
        
        .col-sm-6(style='min-height:800px;')
          .profile-tabs
            .nav-tabs-navigation
              .nav-tabs-wrapper
                ul.nav.nav-tabs#tabs(data-tabs="tabs")
                  
                  li(class='#{(activeTab=="taipei")?"active":""}')
                    a(href="#taipeiTab" data-toggle="tab")
                      h5
                        i.fa.fa-map-marker
                        | 台北
                  li(class='#{(activeTab=="keelung")?"active":""}')
                    a(href="#keelungTab" data-toggle="tab")
                      h5
                        i.fa.fa-map-marker
                        | 基隆
                  //- li(class='#{(activeTab=="kinmen")?"active":""}')
                  li(class='#{(activeTab=="kinmen")?"active":""}')
                    a(href="#kinmenTab" data-toggle="tab")
                      h5
                        i.fa.fa-map-marker
                        | 金門
            #my-tab-content.tab-content
              #taipeiTab.tab-pane(class='#{(activeTab=="taipei")?"active":""}')
                include svg/taipei
              #keelungTab.tab-pane(class='#{(activeTab=="keelung")?"active":""}')
                include svg/keelung
              #kinmenTab.tab-pane(class='#{(activeTab=="kinmen")?"active":""}')
                include svg/kinmen

