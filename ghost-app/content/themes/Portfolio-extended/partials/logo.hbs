<header class="logo-ghost">
    {{#if @blog.logo}}
    	<a class="logo__image" href="{{@blog.url}}">
    		<img src="{{@blog.logo}}" alt="{{@blog.title}} - {{@blog.description}}" />
    	</a>
    {{else}}
	    <h1 class="logo__title">
	    	<a href="{{#if tag}}{{tag.url}}{{else}}{{@blog.url}}{{/if}}" class="logo__link">
	    		{{#if tag.name}}
		    		{{tag.name}}
		    	{{else}}
		    		{{@blog.title}}
		    	{{/if}}
		   	</a>
	    </h1>
	    {{#if @blog.description}}
	    <h2 class="logo__desc">{{@blog.description}}</h2>
	    {{/if}}
    {{/if}}
</header>